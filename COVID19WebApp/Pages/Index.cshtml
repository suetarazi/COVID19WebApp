@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model COVID19WebApp.Pages.Home.IndexModel
@{
    Layout = "_Layout";
    <link rel="stylesheet" href="~/css/site.css" />
}

<div class="text-center">

    <h1 class="display-4">COVID-19 Pandemic World and Country Data</h1>
    <br />
    <p>This is a coronavirus-19 (COVID-19) app that integrates with an external API that provides current world and country pandemic data.</p>
    <br />
</div>
<div>
    <h2>Novel coronavirus</h2>
    <p>
        Novel coronavirus (COVID-19) is a virus that is affecting the entire world community!

    </p>
    <p> This website gathers information and statistics about COVID-19 using the Corona-Virus-Stats API</p>
</div>

<div id="worldResults" text-align="center">
    <h3>World Results:</h3>
    @foreach (var result in Model.worldData.Results)
    {
        <p>Total Cases: @result.Confirmed</p>
        <p>Total Deaths: @result.Deaths</p>
        <p>Total Recovered: @result.Recovered</p>
    }

</div>

<section id="CountryInfo">
    <h3>Get COVID-19 data for a specific country by entering the country name below.</h3>
    <p>Please capitalize the first letter of the country name (ex. Italy) and enter USA for the United States.</p>
    <form method="post" asp-page="/Results/Results">
        <div>
            <label asp-for="@Model.Country">Country Name</label>
            <input asp-for="@Model.Country" />
        </div>
        <button type="submit">Get Country Data</button>
    </form>


</section>

